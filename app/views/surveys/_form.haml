= form_for(@survey) do |f|
  - if @survey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@survey.errors.count, "error")} prohibited this survey from being saved:"
      %ul
        - @survey.errors.full_messages.each do |msg|
          %li= msg
  %h3 Build Your Survey
  %p
    = f.label :name, "Survey Name"
    = f.text_field :name, {:class => "text-input"}
  #questions
    = render :partial => 'question', :collection => @survey.questions
    %p= render :partial => 'question_link'
  .actions
    = f.submit